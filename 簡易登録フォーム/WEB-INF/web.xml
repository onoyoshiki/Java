	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Chap7 Form Auth</web-resource-name>
			<url-pattern>/chap7/auth/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
			<role-name>manager</role-name>
		</auth-constraint>
	</security-constraint>

	<login-config>
		<auth-method>FORM</auth-method>
		<realm-name>Chap7 Form-Auth</realm-name>
		<form-login-config>
			<form-login-page>/chap7/login.jsp</form-login-page>
			<form-error-page>/chap7/login_err.jsp</form-error-page>
		</form-login-config>
	</login-config>

	<security-role>
		<role-name>admin</role-name>
	</security-role>
	<security-role>
		<role-name>manager</role-name>
	</security-role>

