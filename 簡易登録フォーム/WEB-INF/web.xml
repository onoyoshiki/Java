	<servlet>
		<servlet-name>EntryServlet</servlet-name>
		<servlet-class>servlet.EntryServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>EntryServlet</servlet-name>
		<url-pattern>/servlet/EntryServlet</url-pattern>
	</servlet-mapping>

	<session-config>
		<session-timeout>10</session-timeout>
	</session-config>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>

